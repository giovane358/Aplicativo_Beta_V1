<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cor_de_fundo"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Viewvoltar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

        <ImageView
            android:id="@+id/Viewshare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="-30dp"
            android:onClick="onClick"
            app:srcCompat="?attr/actionModeShareDrawable" />

        <Button
            android:id="@+id/btnSelectPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/bg_button_img"
            android:text="@string/avatar"
            android:layout_marginTop="-24dp"
            android:onClick="onClick"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/cor_Select"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-80dp"
             />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"
            android:onClick="onClick"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/txtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="130dp"
            android:textSize="9sp"
            android:layout_marginRight="120dp"
         />

    </LinearLayout> <!--finish menu user-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Config"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cor_Select"
                android:onClick="onClick"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <ImageButton
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/cor_de_fundo"
                android:onClick="onClick"
                app:srcCompat="@drawable/ic_notifications" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/txtResetSenha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"

            android:onClick="onClick"
            app:cardBackgroundColor="@color/cor_de_fundo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:text="@string/nav_password"
                android:textColor="#FFF"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/txtTemo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:onClick="onClick"
            app:cardBackgroundColor="@color/cor_de_fundo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:text="@string/navTermos"
                android:textColor="#FFF"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/cor_de_fundo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nav_versao"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/verssao"
                android:textColor="#FFF"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/txtExit"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:onClick="onClick"
            app:cardBackgroundColor="@color/cor_de_fundo">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="@string/nav_sair"
                android:textColor="#FFF" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/cor_de_fundo"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/fui_button_text_save" />

        </androidx.cardview.widget.CardView>

    </LinearLayout> <!--finish menu option-->


</LinearLayout>